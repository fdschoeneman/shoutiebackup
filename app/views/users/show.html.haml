%table.profile{:summary => "Terms"}
  %tr
    %td.main
      %h1
        = gravatar_for @user
        = @user.name
      = render 'follow_form' if signed_in?
      - unless @user.reviews.empty?
        %table.reviews{:summary => "User reviews"}
          = render @reviews
          = will_paginate @reviews
    %td.sidebar.round
      %strong Name
      = @user.name
      %br/
      %strong URL
      = link_to user_path(@user), @user
      %strong Reviews
      = @user.reviews.count
      - render 'shared/stats'

